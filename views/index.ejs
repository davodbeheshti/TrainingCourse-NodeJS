<%- include('./includes/head.ejs') %>

    <div class="form-group mt-3">
        <form action="/admin/add-todo" role="form" class="row w-50 justify-content-center mx-auto" method="post">
            <div class="input-group">
                <input type="text" name="todo" class="form-control w-50" />
                <div class="input-group-prepend">
                    <button type="submit" class="btn btn-primary fa fa-plus"></button>
                </div>
            </div>
        </form>
        <div class="mx-auto w-50 alert alert-primary row">
            <p class="d-inline col">کار های انجام شده : <span class="badge badge-success">
                    <%= completedTodos %>
                </span></p>
            <p class="d-inline col">کار های باقی مانده : <span class="badge badge-warning">
                    <%= notcompletedTodos %>
                </span></p>
        </div>
        <% if(todos.length  > 0) { %>
            <ul class="list-unstyled" id="todo">
                <% for(let todo of todos) { %>
                    <li>
                        <div class="alert <%= todo.completed ? 'alert-success' : 'alert-secondary' %>">
                            <%= todo.text %>
                                <a href="/admin/delete-todo/<%= todo.id %>" class="fa fa-trash"
                                    style="color : red;"></a>
                                <a href="/admin/completed-todo/<%= todo.id %>"
                                    class="fa fa-check-square mr-2 <%= todo.completed ? 'd-none' : null %>"
                                    style="color : green;"></a>
                        </div>
                    </li>
                    <% } %>
            </ul>
            <% } else { %>
                <div class="alert alert-warning w-50 mx-auto" role="alert">
                    <h4 class="alert-heading">هیچ کاری هنوز انجام داده نشده است</h4>
                    <p>کار هات رو اون بالا ثبت کن داداچ</p>
                    <hr />
                </div>
                <% } %>
    </div>

    <%- include('includes/footer.ejs') %>